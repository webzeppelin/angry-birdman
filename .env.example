# Angry Birdman - Environment Variables Template
# Copy this file to .env and customize the values for your local environment

# ============================================================================
# PostgreSQL Configuration
# ============================================================================

# PostgreSQL connection settings
POSTGRES_USER=angrybirdman
POSTGRES_PASSWORD=angrybirdman_dev_password
POSTGRES_DB=angrybirdman
POSTGRES_PORT=5432

# PostgreSQL host (use 'postgres' when connecting from other Docker containers)
# Use 'localhost' when connecting from host machine
POSTGRES_HOST=postgres

# Additional database for Keycloak
KEYCLOAK_DB=keycloak

# ============================================================================
# Valkey (Redis) Configuration
# ============================================================================

# Valkey connection settings
VALKEY_HOST=valkey
VALKEY_PORT=6379

# Maximum memory allocation for Valkey (affects cache size)
VALKEY_MAXMEMORY=256mb

# Valkey password (optional - uncomment to enable authentication)
# VALKEY_PASSWORD=your_valkey_password

# ============================================================================
# Keycloak Configuration
# ============================================================================

# Keycloak admin credentials
KEYCLOAK_ADMIN_USER=admin
KEYCLOAK_ADMIN_PASSWORD=admin

# Keycloak connection settings
KEYCLOAK_HOSTNAME=localhost
KEYCLOAK_PORT=8080

# Keycloak realm name (will be created/imported)
KEYCLOAK_REALM=angrybirdman

# Keycloak client ID for the frontend application
KEYCLOAK_CLIENT_ID=angrybirdman-frontend

# ============================================================================
# Application Configuration
# ============================================================================

# Node environment (development, staging, production)
NODE_ENV=development

# API server configuration
API_HOST=localhost
API_PORT=3001
API_BASE_URL=http://localhost:3001

# Frontend application configuration
FRONTEND_HOST=localhost
FRONTEND_PORT=3000
FRONTEND_BASE_URL=http://localhost:3000

# ============================================================================
# JWT Configuration
# ============================================================================

# JWT secret for token signing (generate a secure random string for production)
JWT_SECRET=dev_jwt_secret_change_in_production

# JWT expiration times
JWT_ACCESS_TOKEN_EXPIRATION=15m
JWT_REFRESH_TOKEN_EXPIRATION=7d

# ============================================================================
# CORS Configuration
# ============================================================================

# Allowed origins for CORS (comma-separated list)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# ============================================================================
# Logging Configuration
# ============================================================================

# Log level (trace, debug, info, warn, error, fatal)
LOG_LEVEL=info

# Log format (json, pretty)
LOG_FORMAT=pretty

# ============================================================================
# Docker Configuration
# ============================================================================

# Compose project name (affects container and volume names)
COMPOSE_PROJECT_NAME=angrybirdman

# ============================================================================
# Development Tools (Optional)
# ============================================================================

# pgAdmin configuration (if enabled in docker-compose.override.yml)
PGADMIN_DEFAULT_EMAIL=admin@angrybirdman.local
PGADMIN_DEFAULT_PASSWORD=admin
PGADMIN_PORT=5050

# Redis Commander port (if enabled in docker-compose.override.yml)
REDIS_COMMANDER_PORT=8081
