{
  "name": "@angrybirdman/api",
  "version": "0.1.0",
  "description": "Backend API for Angry Birdman",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch --clear-screen=false src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --ext .ts",
    "clean": "rm -rf dist node_modules .turbo",
    "prisma:generate": "cd ../database && npm run generate"
  },
  "dependencies": {
    "@angrybirdman/common": "*",
    "@angrybirdman/database": "*",
    "@fastify/cors": "^9.0.0",
    "@fastify/helmet": "^11.1.1",
    "@fastify/jwt": "^7.2.4",
    "@fastify/rate-limit": "^9.1.0",
    "@fastify/swagger": "^8.14.0",
    "@fastify/swagger-ui": "^2.0.1",
    "@prisma/client": "^6.19.0",
    "dotenv": "^17.2.3",
    "fastify": "^4.25.2",
    "fastify-plugin": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "jwks-rsa": "^3.2.0",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.10.0",
    "@vitest/coverage-v8": "^1.6.1",
    "prisma": "^6.19.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "vitest": "^1.1.0"
  }
}
