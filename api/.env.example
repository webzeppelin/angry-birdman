# Server Configuration
NODE_ENV=development
PORT=3001
HOST=0.0.0.0
LOG_LEVEL=debug

# Database Configuration
DATABASE_URL=postgresql://angrybirdman:angrybirdman_dev_password@localhost:5432/angrybirdman

# Keycloak Configuration
KEYCLOAK_URL=http://localhost:8080
KEYCLOAK_REALM=angrybirdman
# Service account for Keycloak Admin API operations (user registration, password reset, etc.)
# Get the client secret from: Keycloak Admin Console > Clients > angrybirdman-api-service > Credentials tab
KEYCLOAK_ADMIN_CLIENT_ID=angrybirdman-api-service
KEYCLOAK_ADMIN_CLIENT_SECRET=your-client-secret-here

# CORS Configuration
CORS_ORIGIN=http://localhost:5173

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_TIME_WINDOW=1 minute

# Battle Scheduler Configuration
# Enable or disable automatic battle creation
BATTLE_SCHEDULER_ENABLED=true
