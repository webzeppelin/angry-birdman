{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "bundler",
    "types": ["node"],
    "noImplicitAny": false, // Prisma operations result in 'any' types in callbacks
    "baseUrl": ".",
    "outDir": "./dist",
    "paths": {
      "@/*": ["./src/*"],
      "@angrybirdman/common": ["../common/src/index.ts"],
      "@angrybirdman/common/*": ["../common/src/*"],
      "@angrybirdman/database": [
        "../database/generated/prisma/client/index.d.ts"
      ]
    }
  },
  "include": [
    "src/**/*",
    "tests/**/*",
    "test-keycloak-auth.ts",
    "vitest.config.ts"
  ],
  "exclude": ["node_modules", "dist", "coverage"]
}
