{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "bundler",
    "types": ["node"],
    "noImplicitAny": false, // Prisma operations result in 'any' types in callbacks
    "baseUrl": ".",
    "outDir": "./dist"
  },
  "include": [
    "src/**/*",
    "tests/**/*",
    "test-keycloak-auth.ts",
    "vitest.config.ts"
  ],
  "exclude": ["node_modules", "dist", "coverage"]
}
