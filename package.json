{
  "name": "angrybirdman",
  "version": "0.1.0",
  "description": "A comprehensive clan management system for Angry Birds 2",
  "private": true,
  "type": "module",
  "workspaces": [
    "frontend",
    "api",
    "common",
    "database"
  ],
  "scripts": {
    "dev": "npm-run-all --parallel dev:*",
    "dev:api": "npm run dev --workspace=api",
    "dev:frontend": "npm run dev --workspace=frontend",
    "build": "npm-run-all build:*",
    "build:common": "npm run build --workspace=common",
    "build:api": "npm run build --workspace=api",
    "build:frontend": "npm run build --workspace=frontend",
    "build:all": "./scripts/build-all.sh",
    "test": "npm run test --workspaces --if-present",
    "test:watch": "npm run test:watch --workspaces --if-present",
    "test:coverage": "npm run test:coverage --workspaces --if-present",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md,yml,yaml}\"",
    "type-check": "npm run type-check --workspaces --if-present",
    "clean": "npm run clean --workspaces --if-present && rm -rf node_modules",
    "db:migrate:dev": "npm run migrate:dev --workspace=database",
    "db:migrate:deploy": "npm run migrate:deploy --workspace=database",
    "db:generate": "npm run generate --workspace=database",
    "db:seed": "npm run seed --workspace=database",
    "db:studio": "npm run studio --workspace=database",
    "db:reset": "npm run migrate:reset --workspace=database",
    "db:backup": "./scripts/backup-db.sh",
    "db:restore": "./scripts/restore-db.sh",
    "db:reset-dev": "./scripts/reset-db.sh",
    "db:validate": "cd database && tsx validate-database.ts",
    "db:create-test": "./scripts/create-test-db.sh",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:ps": "docker-compose ps",
    "docker:restart": "docker-compose restart",
    "docker:clean": "docker-compose down -v && docker volume prune -f",
    "check:ready": "./scripts/check-ready.sh",
    "check:security": "npm audit --audit-level=moderate",
    "prepare": "husky"
  },
  "keywords": [
    "angry-birds-2",
    "clan-management",
    "statistics",
    "performance-tracking"
  ],
  "author": "Angry Birdman Team",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/webzeppelin/angry-birdman.git"
  },
  "bugs": {
    "url": "https://github.com/webzeppelin/angry-birdman/issues"
  },
  "homepage": "https://github.com/webzeppelin/angry-birdman#readme",
  "engines": {
    "node": ">=24.0.0",
    "npm": ">=11.0.0"
  },
  "overrides": {
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "npm-run-all": "^4.1.5",
    "picomatch": "^4.0.3",
    "prettier": "^3.7.3",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "typescript": "^5.9.3"
  }
}
